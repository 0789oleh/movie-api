{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express", "multer"],
    "esModuleInterop": true,
  },
  "include": ["src/**/*",  "src/**/*.d.ts"]
}